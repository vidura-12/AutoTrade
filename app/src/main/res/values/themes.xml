<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary branding color -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnPrimary">@color/buttonTextColorPrimary</item>

        <!-- Secondary branding color -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorSelected</item>
        <item name="colorOnSecondary">@color/buttonTextColorAccent</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/backgroundColorprimary</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <!-- Button colors -->
        <item name="buttonStyle">@style/Widget.Button</item>

        <!-- Navigation Bar -->
        <item name="bottomNavigationStyle">@style/Widget.BottomNavigationView</item>
    </style>

    <!-- Button Style -->
    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Bottom Navigation View -->
    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/colorSecondary</item>
        <item name="itemTextColor">@color/colorSecondary</item>
        <item name="itemRippleColor">@color/colorPressed</item>
    </style>
</resources>
